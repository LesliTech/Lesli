<header class="lesli-app-header">

    <!-- User navigation area -->
    <nav class="navbar is-transparent">

        <!-- Brand container -->
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                <%# <%= image_tag 'brand/lesli-logo.svg', alt: 'LesliCloud logo'% > %>
                <%= image_tag 'cloud_haus/brand/deutsche-leibrenten-logo.png', alt: 'LesliCloud logo'%>
            </a>
        </div>

        <div id="header-main-navbar" class="navbar-menu">

            <!-- Assistant controls -->
            <div class="navbar-start">

                <div class="navbar-item">
                    <div class="control has-icons-left">
                        <input class="input" type="email" placeholder="Email">
                        <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                </div>

            </div>

            <!-- User navigation -->
            <div class="navbar-end">

                <a class="navbar-item" @click="bus.publish('open:/cloud/layout/notify#notification')">
                    <i v-if="notification.count > 0" class="fas fa-bell has-text-link"></i>
                    <i v-if="notification.count == 0" class="far fa-bell"></i>
                    <i class="far fa-bell"></i>
                    <span 
                        v-if="notification.count > 0" 
                        id="notification_total">
                        {{ notification.count }}
                    </span>
                    <span>0</span>
                </a>

                <div class="navbar-item has-dropdown is-hoverable">
                    <span class="navbar-link">
                        <%= current_user.email %>
                    </span>

                    <div class="navbar-dropdown">
                        <a class="navbar-item">
                            <span class="icon has-text-grey-light">
                                <i class="fas fa-user"></i>
                            </span>
                            <span>Profile</span>
                        </a>
                        <hr class="navbar-divider">
                        <a class="navbar-item">
                            <span class="icon has-text-grey-light">
                                <i class="fas fa-sign-out-alt"></i>
                            </span>
                            <span>Logout</span>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </nav>
</header>
<%# 
%component-layout-app-header
    %template{"v-slot:logo" => ""}
        = image_tag 'brand/lesli-logo.svg', alt: 'LesliCloud logo'
%>
