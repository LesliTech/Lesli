<% # Get an specific site tracking id or use the development default %>
<% tracking_id = Rails.application.credentials.dig(:providers, :analytics) || 'DENAB' %>

<% # check if analytics is enabled in the settings file %>
<% enable_analytics = Rails.application.config.lesli.dig(:security, :enable_analytics) %>

<% #if Rails.env.production? && enable_analytics %>

<script type="text/javascript">

    function loadFathomAnalytics() {
        (function(f, a, t, h, o, m){
            a[h]=a[h]||function(){
                (a[h].q=a[h].q||[]).push(arguments)
            };
            o=f.createElement('script'),
            m=f.getElementsByTagName('script')[0];
            o.async=1; o.src=t; o.id='fathom-script';
            m.parentNode.insertBefore(o,m)
        })(document, window, 'https://analytics.lesli.tech/tracker.js', 'fathom');
        fathom('set', 'siteId', '<%= tracking_id %>');
        fathom('trackPageview');
    }

    setTimeout(() => { loadFathomAnalytics() }, 4000);
    
</script>

<% #end %>
