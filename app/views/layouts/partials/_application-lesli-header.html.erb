<application-component-header>

    <%# language selector %>
    <% if I18n.available_locales.length > 1 && false %>
    <template v-slot:languages>
        <div class="dropdown is-hoverable header-language-selector">
            <div class="dropdown-trigger">
                <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                    <span class="icon has-text-grey-light">
                        <%= flag_icon(language_flag(I18n.locale)) %>
                    </span>
                </button>
            </div>
            <div class="dropdown-menu" id="dropdown-menu" role="menu">
                <div class="dropdown-content">
                    <% I18n.available_locales.each do |locale| %>
                        <% next if locale == I18n.locale %>
                        <%= link_to language_url(locale), { :class => "dropdown-item" } do %>
                            <span class="icon has-text-grey-light">
                                <%= flag_icon(language_flag(locale)) %>
                            </span>
                            <span><%= language_name(locale) %></span>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </template>
    <% end %>

    <%# tasks icon indicator %>
    <% if defined?(CloudFocus) %>
    <template v-slot:tasks>
        <a class="navbar-item header-notification-indicator core" @click="data.global.show_panel_tasks = true">
            <i v-if="lesli.tasks > 0" class="fas fa-tasks has-text-link"></i>
            <i v-if="lesli.tasks == 0" class="fas fa-tasks"></i>
            <span v-if="lesli.tasks > 0">{{ lesli.tasks }}</span>
        </a>
    </template>
    <% end %>

    <%# tickets icon indicator %>
    <% if defined?(CloudHelp) %>
    <template v-slot:tickets>
        <a class="navbar-item header-notification-indicator core" @click="data.global.show_panel_support = true">
            <i v-if="lesli.tickets > 0" class="fas fa-ticket-alt has-text-link"></i>
            <i v-if="lesli.tickets == 0" class="fas fa-ticket-alt"></i>
            <span v-if="lesli.tickets > 0">{{ lesli.tickets }}</span>
        </a>
    </template>
    <% end %>

    <%# announcements icon indicator %>
    <% if defined?(CloudBell) %>
    <template v-slot:announcements v-if="abilities.privilege('announcements', 'cloud_bell')['create']">
        <a class="navbar-item header-notification-indicator" @click="data.global.show_panel_announcement = true">
            <i class="fas fa-bullhorn"></i>
        </a>
    </template>
    <% end %>

    <%# notifications icon indicator %>
    <% if defined?(CloudBell) %>
    <template v-slot:notifications>
        <a class="navbar-item header-notification-indicator core" @click="data.global.show_panel_notifications = true">
            <i v-if="lesli.notifications > 0" class="fas fa-bell has-text-link"></i>
            <i v-if="lesli.notifications == 0" class="far fa-bell"></i>
            <span v-if="data.global.cloud_bell_notifications > 0">{{ data.global.cloud_bell_notifications }}</span>
        </a>
    </template>
    <% end %>

    <%# engines panel %>
    <template v-slot:engines>
        <a class="navbar-item header-navigation-engine core" @click="data.global.show_panel_engines = true">
            <span class="icon">
                <svg viewBox="0 0 24 24">
                    <path d="M6,8c1.1,0 2,-0.9 2,-2s-0.9,-2 -2,-2 -2,0.9 -2,2 0.9,2 2,2zM12,20c1.1,0 2,-0.9 2,-2s-0.9,-2 -2,-2 -2,0.9 -2,2 0.9,2 2,2zM6,20c1.1,0 2,-0.9 2,-2s-0.9,-2 -2,-2 -2,0.9 -2,2 0.9,2 2,2zM6,14c1.1,0 2,-0.9 2,-2s-0.9,-2 -2,-2 -2,0.9 -2,2 0.9,2 2,2zM12,14c1.1,0 2,-0.9 2,-2s-0.9,-2 -2,-2 -2,0.9 -2,2 0.9,2 2,2zM16,6c0,1.1 0.9,2 2,2s2,-0.9 2,-2 -0.9,-2 -2,-2 -2,0.9 -2,2zM12,8c1.1,0 2,-0.9 2,-2s-0.9,-2 -2,-2 -2,0.9 -2,2 0.9,2 2,2zM18,14c1.1,0 2,-0.9 2,-2s-0.9,-2 -2,-2 -2,0.9 -2,2 0.9,2 2,2zM18,20c1.1,0 2,-0.9 2,-2s-0.9,-2 -2,-2 -2,0.9 -2,2 0.9,2 2,2z">
                    </path>
                </svg>
            </span>
        </a>
    </template>

    <%# username %>
    <template v-slot:username>
    <%= current_user.full_name %>
    </template>

    <%# Custom header from builder engine %>
    <% custom_header_partial_path = "layouts/#{lesli_instance_code}/partials/application-header" %>
    <% custom_header_partial_exists = lookup_context.exists?(custom_header_partial_path, nil, true) %>

    <% if custom_header_partial_exists %>
    <%= render partial: custom_header_partial_path %>
    <% end %>

</application-component-header>
