%>

<% # define @account data for the lesli plugin %>
<script>const lesli = <%= @account.to_json.html_safe %></script>

<% if user_signed_in? %>
<script>
    <% # special data for authenticated users  %>
    const shortcuts = <%= @account[:shortcuts].to_json.html_safe %>
</script>
<% end %>
