<% translation_timestamp = File.mtime(Rails.root.join("public", "javascripts", "translations.js")).to_i %>
<%= javascript_include_tag "i18n" %>
<%= javascript_include_tag "translations?#{translation_timestamp}", skip_pipeline: true %>
<%= javascript_include_tag application_javascript_path() %>
<script src="//js.honeybadger.io/v2.2/honeybadger.min.js" type="text/javascript"></script>
 
<script>

    // Set language for JavaScripts apps
    I18n.locale = '<%= I18n.locale %>'

</script>

<script type="text/javascript">
Honeybadger.configure({
    apiKey: "<%= Rails.application.credentials.services[:honey_badger][:api_key] %>",
    revision: "<%= @account[:revision][:version] %>-<%= @account[:revision][:build] %>",
    environment: "<%= Rails.env %>",
    disabled: <%= !Rails.env.production? %>
})
</script>
