<% custom_app_logo_path = "#{ lesli_instance_code }/brand/app-icon.svg" %>
<% custom_app_page_clas = "#{ lesli_instance_code }-mfas" %>
<% custom_app_page_path = "#{ lesli_instance_code }/lesli/mfas/new" %>
<% custom_app_page_exists = lookup_context.exists?(custom_app_page_path) %>



<%# render custom view in builder module %>
<% if custom_app_page_exists %>
<main id="lesli-application" class="<%= custom_app_page_clas %>">
    <%= render :template => custom_app_page_path %>
</main>
<% end %>



<%# core view for mfa page %>
<% unless custom_app_page_exists %>
<main id="lesli-application" class="lesli">
    <section class="columns is-gapless">
        <div class="column">
            <div class="hero is-fullheight">
                <div class="hero-body is-flex-direction-column is-justify-content-center">

                    <%# Logo container %>
                    <div class="logo has-text-centered mb-6">
                        <%= image_tag custom_app_logo_path, :class => "#{lesli_instance_code}-logo", :alt => "logo" %>
                        <h1 class="has-text-primary">Two-factor Authentication</h1>
                        <p>Please enter the code we have sent you.</p>
                    </div>

                    <%# Log in form %>
                    <form @submit.prevent="putMfa" method="post">
                        <div class="field mb-4">
                            <label for="user_email" class="label">2FA code</label>
                            <div class="control has-icons-left has-icons-right">
                                <input
                                    id="user_email"
                                    name="user_email"
                                    type="string"
                                    ref="code"
                                    :class="['input', `is-${notification.type}`]"
                                    placeholder="* * * * * *"
                                    v-model="mfa.t"
                                    @input="typing">
                                <span 
                                    class="icon is-small is-left" 
                                    :class="['icon', 'is-small', 'is-left', `has-text-${notification.type}`]">
                                    <i class="ri-lock-password-line"></i>
                                </span>
                                <%# 
                                <span class="icon is-right">
                                    <i class="ri-check-line"></i>
                                </span> 
                                %>
                            </div>
                        </div>

                        <div class="field mb-6">
                            <div class="control is-fullwidth">
                                <input type="submit" class="button is-primary is-fullwidth mb-2" value="Log in">
                            </div>
                        </div>

                    </form>
                </div>
                <%# footer %>
                <%= render partial: "devise/shared/footer" %>
            </div>
        </div>
        <div class="column is-hidden-touch"></div>
    </section>
</main>
<% end %>
