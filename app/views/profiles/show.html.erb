<% # vapid key for web push notifications  %>
<% content_for :application_custom_assets do %>
    <%# check if web pushes is enabled %>
    <% if !@account[:pushs] %>
        <%# get vapid keys for web push notification server authentication %>
        <% vapid_key = Rails.application.credentials.dig(:services, :vapid, :public_key) %>
        <%# convert key to bytes if valid vapid key found %>
        <% unless vapid_key.blank? %>
            <%# pass the key to the javascript app %>
            <script>const vapid = new Uint8Array(Base64.urlsafe_decode64(<%= vapid_key %>).bytes);</script>
        <% end %>
    <% end %>
<% end %>
<router-view></router-view>
