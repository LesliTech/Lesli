                        <table class="row lesli-email-header"><tbody><tr>
                            <th class="small-12 large-12 columns first last"><table><tbody><tr><th>
                                <center>
                                    <img src="<%= image_url(@email[:instance][:code]+'/brand/'+@email[:instance][:code]+'-logo.png') %>" alt="<%= @email[:instance][:name]%> logo">
                                </center>
                            </th>
<th class="expander"></th></tr></tbody></table></th>
                        </tr></tbody></table>
                        <table class="row"><tbody><tr>
                            <th class="small-12 large-12 columns first last"><table><tbody><tr><th>
                    
                                <table class="spacer"><tbody><tr><td height="32" style="font-size:32px;line-height:32px;">&nbsp;</td></tr></tbody></table> 
                    
                                <h4 class="text-center">
                                    <%= I18n.t('deutscheleibrenten.shared.email_text_greeting') %><%= @data[:name] %>
                                </h4>
                    
                                <table class="spacer"><tbody><tr><td height="16" style="font-size:16px;line-height:16px;">&nbsp;</td></tr></tbody></table> 
                                <p><%= I18n.t('deutscheleibrenten.users/passwords.email_new_password_text_description') %> <%= @data[:email] %></p>
                                <p><%= I18n.t('deutscheleibrenten.users/passwords.email_new_password_text_instructions') %></p>
                                <table class="spacer"><tbody><tr><td height="16" style="font-size:16px;line-height:16px;">&nbsp;</td></tr></tbody></table> 
                    
                                <center>
                                    <table class="button radius large small-expanded float-center"><tbody><tr><td><table><tbody><tr><td><a align="center" href="<%=@data[:href]%>">
                                        <%= I18n.t('deutscheleibrenten.users/passwords.email_change_password_button') %>
