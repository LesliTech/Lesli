    <title><%= @email[:subject] %></title>
</head>
<body>
    <span class="preheader">
        <%= @data[:description].blank? ? @data[:description] : @email[:subject] %>
    </span>
    <table class="body" data-made-with-foundation>
        <tr>
            <td class="float-center" align="center" valign="top">
                <center>
                    
