export default {
    props: {
        %function_resource%: {
            required: true
        },

        viewMode: {
            type: String,
            required: true
        }
    },

    components: {

    },
    
    data() {
        return {
            main_route: '%app_route%',
            %data_resource%: null
        }
    },

    mounted() {
        this.set%function_resource%Id()
        this.copy%function_resource%Prop()
    },

    methods: {

        set%function_resource%Id(){
            this.%data_resource%_id = this.$route.params.id
        },

        // We copy the resource into data so we can easily modify it without emiting events
        copy%function_resource%Prop(){
            this.%data_resource% = {... this.%function_resource%}
        },

        submit%function_resource%(event){
            if (event) { event.preventDefault() }

            if(this.viewMode == 'new'){
                this.post%function_resource%()
            }else if(this.viewMode == 'edit'){
                this.put%function_resource%()
            }
        },

        post%function_resource%() {
            let form_data = {
                %data_resource%: this.%data_resource%
            }
            let url = `${this.main_route}.json`

            this.http.post(url, form_data).then(result => {
                if (result.successful) {
                    this.alert('%data_resource% created successfully', 'success')
                    this.$router.push(`/${result.data.id}`)
                }else{
                    this.alert(result.error.message,'danger')
                }
            }).catch(error => {
                console.log(error)
            })

        },

        put%function_resource%() {
            let form_data = {
                %data_resource%: this.%data_resource%
            }
            let url = `${this.main_route}/${this.%data_resource%_id}.json`

            this.http.put(url, form_data).then(result => {
                if (result.successful) {
                    this.alert('%data_resource% updated successfully', 'success')
                    this.$router.push(`/this.%data_resource%.id`)
                }else{
                    this.alert(result.error.message, 'danger')
                }
            }).catch(error => {
                console.log(error)
            })

        }
    }
}
</script>
<template>
    <div class="card">
        <!--------------------------------------- START CARD HEADER --------------------------------------->
        <div class="card-header">
            <h2 class="card-header-title">
                %data_resource%
            </h2>
            <div class="card-header-icon">
                <router-link v-if="viewMode == 'edit'" :to="`/${%data_resource%.id}`">
                    <i class="fas fa-eye"></i>
                    Show %data_resource%
                </router-link>
                <router-link v-if="viewMode == 'show'" :to="`/${%data_resource%.id}/edit`">
                    <i class="fas fa-eye"></i>
                    Edit %data_resource%
                </router-link>
                <router-link to="/">
                    &nbsp;&nbsp;&nbsp;
                    <i class="fas fa-undo"></i>
                    Return
                </router-link>
            </div>
        <div>
        <!---------------------------------------  END CARD HEADER  --------------------------------------->

        <!--------------------------------------- START CARD CONTENT--------------------------------------->
        <div class="card-content">
            <form @submit="submit%function_resource%">
                <b-field>
                    <b-button type="primary" native-type="submit">
                        <span v-if="viewMode == 'new'">
                            Create %data_resource%
                        </span>
                        <span v-else>
                            Update %data_resource%
                        </span>
                    </b-button>
                </b-field>
            </form>
        </div>
        <!---------------------------------------  END CARD CONTENT --------------------------------------->
    </div>
</template>
