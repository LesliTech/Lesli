@import "templates/public";
@import "lesli/settings/mdicons.scss";


// ·
body.users-sessions.new {

    main.lesli {

        .columns {
            width: 100%;
            height: 100vh;
        }

        .has-session-form {
            max-width: 500px;
            align-self: center;

            .container {
                max-width: 320px;
            }

            .logo-container {

                img {
                    width: 180px;

                    &.lesli-logo {
                        width: 80px;
                    }

                }

            }

            form {
                margin: 2rem 0 6rem;
            }

            .buttons {
                margin-top: 1rem;
            }

        }

        .links {
            color: lesli-css-color(blue);
            hr {
                border-bottom: 1px solid lesli-css-color(silver, 300);
            }
        }

        .has-solution-background {
            background: linear-gradient(
                rgba(lesli-css-color(black, 900), .0),
                rgba(lesli-css-color(black, 900), .55)),
                image_url("lesli_cloud/login/login-background.jpg");
            background-position: center;
            background-size: cover;

            .container {
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: flex-end;
                padding: 2rem;
            }

            h2, p {
                color: lesli-css-color(silver, 100);
            }

        }

    }

}
