// · Include Lesli Standards
@include lesli-css-normalize();


// · 
html,
body {
    color: var(--lesli-font-color);
    font-size: var(--lesli-font-size);
    background-color: var(--lesli-color-background);
    font-family: "Exo", "Helvetica Neue", "Helvetica", "Arial", "sans-serif", sans-serif;
    scrollbar-color: var(--lesli-color-primary) transparent;
    scrollbar-width: thin;
    font-weight: normal;
    line-height: 158%;
}


// · headings and links
a, 
h1 {
    font-family: "Montserrat", "Helvetica Neue", "Helvetica", "Arial", "sans-serif", sans-serif;
}

h1 {
    line-height: 148%;
    font-weight: 800;
    font-size: 24px;
}

h2 {
    line-height: 140%;
    font-weight: 800;
    font-size: 22px;
}

h3 {
    line-height: 140%;
    font-weight: 800;
    font-size: 20px;
}

h4 {
    line-height: 140%;
    font-weight: 600;
    font-size: 18px;
}

h5, 
h6 {
    line-height: 120%;
    font-weight: 500;
    font-size: 16px;
}


// Vue Animation component
.v-enter-active, .v-leave-active { transition: opacity 0.5s ease; }
.v-enter-from, .v-leave-to { opacity: 0; }


// · Import theme overrides from builder engine
// · see: https://github.com/leitfaden/cloud_development/blob/master/documentation/design/02-theme.md
@import "<%= Lesli::System.sass_instance_file('theme') %>";
