// · 
@import "lesli-css";


// · Import customization from builder engine
@import "<%= LC::System::Info.sass_variables_by_instance %>";



// · Configuration
@import "./lesli3/settings/variables";


// · Include Bulma 
@import "./lesli3/bulma/loader";


// · Include vendors
//@import "trix/dist/trix.css";


// · Loading components, settings and helpers
@import "./lesli3/helpers/display";
@import "./lesli3/fonts/remixicons";
@import "./lesli3/fonts/families";
@import "./lesli3/fonts/mdicons";
@import "flag-icon";


// · Loading app layout 
@import "./lesli3/layout/application-header";
@import "./lesli3/layout/application-engines";
@import "./lesli3/layout/application-sidebar";
@import "./lesli3/layout/application-component";
@import "./lesli3/layout/application-footer";
@import "./lesli3/layout/application-search";

// · Panels :) 
@import "./lesli3/panels/panel-notification";

// · Lesli components
@import "./lesli3/components/lesli-loading";
@import "./lesli3/components/lesli-toolbar";
@import "./lesli3/components/lesli-header";
@import "./lesli3/components/lesli-empty";
@import "./lesli3/components/lesli-table";
@import "./lesli3/components/lesli-msg";
@import "./lesli3/components/lesli-tab";
@import "./lesli3/components/lesli-panel";
@import "./lesli3/components/lesli-input-tag";
@import "./lesli3/components/lesli-file-uploader";
@import "./lesli3/components/lesli-avatar";
@import "./lesli3/components/lesli-toggle";

// · Overrides for vendor libraries
@import "./lesli3/overrides/sweetalert";


// · Include Lesli Standards
@include lesli-css-normalize();


// · 
html,
body {
    color: var(--lesli-font-color);
    font-size: var(--lesli-font-size);
    background-color: var(--lesli-color-background);
    font-family: "Exo", "Helvetica Neue", "Helvetica", "Arial", "sans-serif", sans-serif;
    scrollbar-color: var(--lesli-color-primary) transparent;
    scrollbar-width: thin;
    font-weight: normal;
    line-height: 158%;
}


// · headings and links
a, 
h1 {
    font-family: "Montserrat", "Helvetica Neue", "Helvetica", "Arial", "sans-serif", sans-serif;
}

h1 {
    line-height: 148%;
    font-weight: 800;
    font-size: 24px;
}

h2 {
    line-height: 140%;
    font-weight: 800;
    font-size: 22px;
}

h3 {
    line-height: 140%;
    font-weight: 800;
    font-size: 20px;
}

h4,
h5, 
h6 {
    line-height: 140%;
    font-weight: 800;
    font-size: 18px;
}


// Vue Animation component
.v-enter-active, .v-leave-active { transition: opacity 0.5s ease; }
.v-enter-from, .v-leave-to { opacity: 0; }


//
.hover:hover {
    cursor: pointer;
}
