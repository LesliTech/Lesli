# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{rb,ts,vue,js,json,yml,scss,styl,css,html,haml,md}]
charset = utf-8

# 4 space indentation
[*.{rb,ts,vue,js,json,yml,scss,styl,css,html,haml,md}]
indent_style = space
indent_size = 4

# EditorConfig is awesome: https://EditorConfig.org
