{
    "name": "lesli",
    "version": "5.0.0",
    "license": "GPLv3",
    "homepage": "https://www.lesli.dev/",
    "description": "Lesli tools and components for VueJS",
    "author": "The Lesli Development Team <hello@lesli.tech>",
    "devDependencies": {

        "lesli-css": "../../../lesli-css/lesli-css-2.2.0.tgz",

        "dayjs": "1.11.10",

        "webpack": "5.88.2",
        "webpack-cli": "5.1.4",
        "terser-webpack-plugin": "5.3.9",
        "mini-css-extract-plugin":"2.9.2",
        "webpack-remove-empty-scripts": "1.0.4",
        "css-loader":"7.1.2",
        "sass-loader":"16.0.4"
    },
    "scripts": {
        "webpack": "webpack --progress --env mode=development",
        "webpack:watch": "webpack --progress --env watch=true",
        "webpack:production": "webpack --progress --env mode=production",
        "sass": "sass ./lib/scss/templates:./app/assets/stylesheets/lesli/templates/ --load-path=node_modules --load-path=../",
        "sass:watch": "sass ./lib/scss/templates/application.scss ./app/assets/stylesheets/lesli/templates/application.css --watch --load-path=node_modules --load-path=../",
        "sass:production": "sass ./lib/scss/templates/application.scss styles.css --style=compressed --load-path=node_modules --load-path=../"
    }
}
